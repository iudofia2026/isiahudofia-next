{
  "name": "isiahudofia-next",
  "version": "1.0.0",
  "description": "Modern Next.js portfolio for Isiah Udofia",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:unit": "vitest run __tests__/unit",
    "test:integration": "vitest run __tests__/integration",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:generate": "ts-node scripts/generate-tests.ts",
    "test:validate": "ts-node scripts/validate-migration.ts",
    "test:coverage": "vitest run --coverage",
    "migrate": "ts-node scripts/migrate-all.ts",
    "extract:content": "ts-node scripts/extract-content.ts",
    "migrate:images": "ts-node scripts/migrate-images.ts",
    "migrate:videos": "ts-node scripts/migrate-videos.ts",
    "dev:compare": "concurrently \"npm run dev\" \"cd ../isiahudofia.com && npm run dev -- -p 3001\""
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "cheerio": "^1.1.2",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "gsap": "^3.14.2",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/cheerio": "^0.22.35",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.7",
    "@types/react": "^19.2.8",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
